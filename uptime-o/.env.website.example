# Docker Environment Variables for Website Customization
# Use this file as a reference for docker-compose.yml or Kubernetes ConfigMap

# Example docker-compose.yml usage:
# services:
#   app:
#     environment:
#       - WEBSITE_TITLE=My Custom Monitoring
#       - WEBSITE_HEADERDATA=Production Environment
#       - WEBSITE_FAVICONPATH=/content/images/custom-favicon.ico
#       - WEBSITE_LOGOPATH=/content/images/custom-logo.png
#       - WEBSITE_LOGOWIDTH=180
#       - WEBSITE_LOGOHEIGHT=45
#       - WEBSITE_FOOTERTITLE=Â© 2025 My Company
#     volumes:
#       - ./custom-images:/app/content/images

# Website Title (appears in browser tab and navbar)
WEBSITE_TITLE=UptimeO

# Header Data (appears above navbar - useful for environment info)
WEBSITE_HEADERDATA=

# Favicon Path (container path or URL)
# If using custom favicon, mount it via volume to /app/content/images/
WEBSITE_FAVICONPATH=/content/images/favicon.ico

# Logo Path (container path or URL)
# If using custom logo, mount it via volume to /app/content/images/
WEBSITE_LOGOPATH=/content/images/logo.png

# Logo Width in pixels
WEBSITE_LOGOWIDTH=200

# Logo Height in pixels
WEBSITE_LOGOHEIGHT=50

# Footer Title
WEBSITE_FOOTERTITLE=Powered by UptimeO

# ==========================================
# DOCKER VOLUME MAPPING INSTRUCTIONS
# ==========================================
# To use custom images (logo/favicon):
# 1. Create a directory with your custom images:
#    mkdir -p ./custom-images
#    cp your-logo.png ./custom-images/logo.png
#    cp your-favicon.ico ./custom-images/favicon.ico
#
# 2. Add volume mapping in docker-compose.yml:
#    volumes:
#      - ./custom-images:/app/content/images
#
# 3. Set environment variables to point to mounted files:
#    WEBSITE_LOGOPATH=/content/images/logo.png
#    WEBSITE_FAVICONPATH=/content/images/favicon.ico
