<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Create http_monitors table -->
    <changeSet id="20251116000000-1" author="system">
        <createTable tableName="http_monitors">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="method" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="headers" type="jsonb">
                <constraints nullable="true"/>
            </column>
            <column name="body" type="jsonb">
                <constraints nullable="true"/>
            </column>
            <column name="interval_seconds" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="timeout_seconds" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="retry_count" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="retry_delay_seconds" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="response_time_warning_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="response_time_critical_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="uptime_warning_percent" type="float">
                <constraints nullable="true"/>
            </column>
            <column name="uptime_critical_percent" type="float">
                <constraints nullable="true"/>
            </column>
            <column name="include_response_body" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="resend_notification_count" type="integer" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
            <column name="certificate_expiry_days" type="integer" defaultValueNumeric="30">
                <constraints nullable="true"/>
            </column>
            <column name="ignore_tls_error" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="upside_down_mode" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="max_redirects" type="integer" defaultValueNumeric="10">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="tags" type="varchar(500)">
                <constraints nullable="true"/>
            </column>
            <column name="monitoring_visibility" type="varchar(20)" defaultValue="internal">
                <constraints nullable="true"/>
            </column>
            <column name="enabled" type="boolean" defaultValueBoolean="true">
                <constraints nullable="true"/>
            </column>
            <column name="parent_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="http_monitors"
                                 constraintName="fk_http_monitors_parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="http_monitors"/>
    </changeSet>

    <!-- Create http_heartbeats table -->
    <changeSet id="20251116000000-2" author="system">
        <createTable tableName="http_heartbeats">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="executed_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="success" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="response_time_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="response_size_bytes" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="response_status_code" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="response_content_type" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="response_server" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="response_cache_status" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="dns_lookup_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="tcp_connect_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="tls_handshake_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="time_to_first_byte_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="warning_threshold_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="critical_threshold_ms" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="error_type" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="error_message" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="raw_request_headers" type="jsonb">
                <constraints nullable="true"/>
            </column>
            <column name="raw_response_headers" type="jsonb">
                <constraints nullable="true"/>
            </column>
            <column name="raw_response_body" type="jsonb">
                <constraints nullable="true"/>
            </column>
            <column name="monitor_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="agent_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="monitor_id"
                                 baseTableName="http_heartbeats"
                                 constraintName="fk_http_heartbeats_monitor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="http_monitors"/>
                                 
        <addForeignKeyConstraint baseColumnNames="agent_id"
                                 baseTableName="http_heartbeats"
                                 constraintName="fk_http_heartbeats_agent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="agents"/>
    </changeSet>

</databaseChangeLog>
