<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251215000001-1" author="uptimeo">
        <addColumn tableName="api_monitors">
            <column name="additional_urls" type="${clobType}">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251215000001-2" author="uptimeo">
        <comment>Migrate existing single URL to array format</comment>
        <sql>
            UPDATE api_monitors 
            SET additional_urls = '[]'
            WHERE additional_urls IS NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
