<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251111000001-1" author="system">
        <createTable tableName="agent_locks">
            <column name="agent_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="acquired_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20251111000001-2" author="system">
        <createIndex indexName="idx_agent_locks_expires_at" tableName="agent_locks">
            <column name="expires_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
