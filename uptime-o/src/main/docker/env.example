# Database Configuration (REQUIRED - Update with your values)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/uptimeo
SPRING_DATASOURCE_USERNAME=uptimeo
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# Application Configuration
SPRING_PROFILES_ACTIVE=prod,api-docs
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_LIQUIBASE_ENABLED=true

# Branding Configuration
# Set to 'true' to enable database-driven branding via UI (Settings > Branding)
# Set to 'false' to use built-in defaults only
APPLICATION_BRANDING_ENABLED=true

# Image Upload Path (for logo/favicon uploads)
# Docker: Use /var/uptimeo/uploads with persistent volume
# Local: Defaults to ~/.uptimeo/uploads if not set
APPLICATION_UPLOAD_PATH=/var/uptimeo/uploads

# JVM Configuration
JAVA_OPTS=-Xms1024m -Xmx2048m -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/tmp/heap_dump.hprof

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_FILE_NAME=/var/log/uptimeo/application.log
LOGGING_FILE_MAX_SIZE=100MB
LOGGING_FILE_MAX_HISTORY=30